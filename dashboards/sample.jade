extends layout

block title
  | Rails team dashboard

block content
  div.gridster
    ul
      li(data-row='1', data-col='1', data-sizex='1', data-sizey='1')
        div(data-id='nextmeetup', data-view='Nextmeetup', data-title='Next Ruby Zagreb Meetup is in', data-moreinfo="www.meetup.com/rubyzg")
          
      li(data-row='1', data-col='2', data-sizex='2', data-sizey='1')
        div(data-id="github_trending" data-view="GithubTrending" data-unordered="true" data-title="Trending #ruby" data-moreinfo="")
      
      li(data-row="1" data-col="4" data-sizex="1" data-sizey="2")
        div(data-id="bugsnag" data-view="List" data-unordered="true" data-title="Bugsnag" data-moreinfo="# of open errors")
      
      li(data-row='2', data-col='1', data-sizex='1', data-sizey='1')
        div(data-id='up_monitors', data-view='Meter', data-title='UP MONITORS', data-min="0" data-max="100")
          
      li(data-row='2', data-col='2', data-sizex='1', data-sizey='1')
        div(data-id='down_monitors', data-view='Meter', data-title='DOWN MONITORS', data-min="0" data-max="100")
      
      li(data-row='2', data-col='3', data-sizex='1', data-sizey='1')
        div(data-id='paused_monitors', data-view='Meter', data-title='PAUSE MONITORS', data-min="0" data-max="100")
